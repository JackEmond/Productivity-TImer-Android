<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jedesign.productivitytimer.StatsFragment.StatsFragment"
    >
    <TextView
        android:id="@+id/tvStatsMainHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:fontFamily="@font/bebas_neue"
        android:textAlignment="center"
        android:textSize="55dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnGenerateData"
        style="@style/Timer_Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Data" />
    <!-- Linear Layout Added to add Black Outline to Spinner -->
    <LinearLayout
        android:id="@+id/cardView_spinner"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/stats_personality">
    <Spinner
        android:id="@+id/spinnerGraphSelection"
        android:layout_width="match_parent"
        android:fontFamily="@font/bebas_neue"
        android:contentDescription="Select which graph to display"
        android:spinnerMode="dropdown"
        android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/black"
        android:background="@drawable/rounded_graph_layout"
        android:layout_margin="10dp"
        android:id="@+id/llGraph"
        >

    <TextView
        android:id="@+id/tvGraphTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Productive Each Day"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bebas_neue"
        android:textColor="@color/white"
        />

    <com.jjoe64.graphview.GraphView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="300dp"
        android:id="@+id/graph"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDailyStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All Stats"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bebas_neue"
        />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            <Button
                android:id="@+id/btnAllLocations"
                style="@style/Timer_Buttons"
                android:text="All Locations" />

                <Button
                    android:id="@+id/btnAllTimers"
                    style="@style/Timer_Buttons"
                    android:text="All Timers" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <Button
                    android:id="@+id/btnAllTasks"
                    style="@style/Timer_Buttons"
                    android:text="All Tasks" />

                <Button
                    android:id="@+id/btnNewTimer"
                    style="@style/Timer_Buttons"
                    android:text="New Timer" />
            </TableRow>
        </TableLayout>



</LinearLayout>
</ScrollView>
